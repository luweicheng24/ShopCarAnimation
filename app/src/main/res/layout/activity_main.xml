<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyleView"
        android:background="#66c931e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </android.support.v7.widget.RecyclerView>
  <TextView

      android:layout_alignTop="@+id/ll_bottom"
      android:background="@color/colorAccent"
      android:layout_width="match_parent"
      android:layout_height="2dp">

  </TextView>
<LinearLayout
    android:id="@+id/ll_bottom"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffff"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/firstPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/navigation_1x6" />

    <ImageView
        android:layout_width="0dp"
       android:id="@+id/message"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/navigation_1x9" />
   <RelativeLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:layout_weight="1"
       >
       <ImageView

           android:layout_width="match_parent"
           android:id="@+id/shopCar"
           android:layout_height="wrap_content"
           android:src="@drawable/navigation_1x8" />
       <TextView
          android:id="@+id/redCircle"
           android:gravity="center"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:text="0"
           android:textSize="10sp"
           android:textColor="#ffff"
           android:layout_marginRight="15dp"
           android:layout_alignParentTop="true"
           android:layout_alignRight="@+id/shopCar"
           android:background="@drawable/circle_red"
           />
   </RelativeLayout>


    <ImageView
        android:layout_width="0dp"
        android:id="@+id/wo"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/navigation_1x10" />

</LinearLayout>
</RelativeLayout>
